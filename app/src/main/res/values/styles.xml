<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/enable_stroke_color</item>
        <item name="android:textColorHint">@color/disable_stroke_color</item>
        <item name="boxStrokeColor">@drawable/text_input_layout_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="CustomEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_text_input_color</item>
        <item name="fontFamily">@font/panton_regular</item>
        <item name="android:textCursorDrawable">@drawable/cursor_background</item>
    </style>
</resources>